{
    "name": "auto-convert-end-of-line",
    "displayName": "Auto Convert End Of Line",
    "publisher": "crendking",
    "description": "Automatically convert files with configured end-of-line sequence",
    "version": "0.2.2",
    "license": "See license in LICENSE.txt",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "end-of-line",
        "eol",
        "save"
    ],
    "icon": "media/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/CrendKing/auto-convert-end-of-line"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "bun run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "*",
        "@types/vscode": "*",
        "@vscode/vsce": "*",
        "typescript": "*"
    }
}
